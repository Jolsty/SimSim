<% include ../partials/header %>
    <div class="w3-container w3-padding-64 w3-center w3-black w3-xxxlarge" id="home"> Libro Soci</div>
    <hr class="w3-padding-16">
    <div class="w3-row">
        <div class="w3-third w3-center" style="overflow-y: scroll; height: 896px;">
            <ul class="w3-ul">
                <li class="w3-dark-grey w3-xlarge w3-padding-16">Soci <span class="w3-medium">(<%=soci.length %>)</span>
                    <a class="w3-btn w3-round-large w3-hover-light-grey w3-medium" href="/api/soci/create">
                        <i class="fas fa-plus"></i>
                    </a>
                    <div class="w3-margin w3-medium">
                        <form id="ricercaSoci" name="ricercaSoci">
                                <input class="w3-input w3-round-large w3-hover-light-grey" type="text" required id="cercaSoci" name="cercaSoci" placeholder="Cerca..." ></input>
                                <div class="w3-margin-top">
                                    <button class="w3-btn w3-white w3-round-large w3-hover-light-grey" type="submit">
                                        <i class="fas fa-search w3-medium"></i>  Cerca
                                    </button>
                                </div>
                        </form>
                        <div>
                            <% if (locals.searched) { %>
                                <hr>
                                <p class='w3-center'> Risultati della ricerca &nbsp;&nbsp;&nbsp;
                                    <a href="/api/soci/view">
                                        <i class="fas fa-arrow-left w3-large w3-btn w3-hover-light-grey"></i>
                                    </a>
                                </p>
                            <% } %>
                        </div>
                    </div>
                </li>
                <% if (soci.length>0) { %>
                    <% for(var i=0; i<soci.length; i++) { %>
                        <li class="w3-animate-opacity w3-white">
                                    <p style="white-space: nowrap; text-overflow: ellipsis; overflow: hidden;"><b><%= soci[i].nome %> <%= soci[i].cognome %></b></p>
                                    <button class="w3-round w3-btn w3-hover-light-grey soci" value="<%= soci[i]._id %>">
                                        <i class="fas fa-search-plus w3-large"></i>
                                    </button>
                            <a class="w3-btn w3-round w3-hover-light-grey" href="/api/soci/update/<%= soci[i]._id %>">
                                    <i class="fas fa-edit"></i>
                            </a>
                            <button class="w3-btn w3-round w3-hover-light-grey rimuoviSocioButton" value="<%= soci[i]._id %>">
                                <i class="fas fa-trash"></i>
                            </button>
                        </li>
                    <% } %>
                <% } else { %>
                    <div class="w3-padding-32 w3-xlarge">Non ho trovato alcun socio.</div>
                <% } %>
            </ul>
        </div>
        <div class="w3-twothird displayDettagli" style="display: none;">
                <ul class="w3-ul">
                    <li class="w3-dark-grey w3-xlarge w3-padding-32 w3-center w3-namePlaceholder"><b></b></li>
                    <div class="w3-block w3-animate-opacity w3-hover-light-grey w3-padding-16 w3-white w3-medium">
                        <div class="w3-margin-left dettagliSocio">
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow""></p>
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow""></p>
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow""></p>
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow"></p>
                            <p class="hover-overflow"></p>
                        </div>
                    </div>
                </ul>
            </div>
    </div>
    <div id="soci-hidden" style="display: none;"><%= sociString %></div>
<% include ../partials/footer %>
